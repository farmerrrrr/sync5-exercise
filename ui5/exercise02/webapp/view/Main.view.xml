<mvc:View controllerName="sync.d14.exercise02.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="panel">
                <content>
                    <Label
                        id="label"
                        text="입력하세요"
                        required="true"
                        class="sapUiSmallMarginEnd"/>
                    <Input
                        id="input1"
                        value="{/number1}"
                        width="10%"
                        class="sapUiSmallMarginEnd"/>
                    <Select
                        id="select"
                        width="auto"
                        items="{Operator>/operator}"
                        class="sapUiSmallMarginEnd">
                        <core:ListItem
                            id="idListItem"
                            key="{Operator>op}"
                            text="{Operator>op}"
                        />
                    </Select>

                    <!-- 버튼 별 이벤트 함수(연산자 설정) 분리 -->
                    <!-- <Button
                        id="btn_add"
                        text="+"
                        press=".onSetOperator_add"
                        class="sapUiSmallMarginEnd"/>
                    <Button
                        id="btn_sub"
                        text="-"
                        press=".onSetOperator_sub"
                        class="sapUiSmallMarginEnd"/>
                    <Button
                        id="btn_mul"
                        text="*"
                        press=".onSetOperator_mul"
                        class="sapUiSmallMarginEnd"/>
                    <Button
                        id="btn_div"
                        text="/"
                        press=".onSetOperator_div"
                        class="sapUiSmallMarginEnd"/> -->
                    <Input
                        id="input2"
                        value="{/number2}"
                        width="10%"
                        class="sapUiSmallMarginEnd"/>
                        
                    <!-- 결과 값 도출 후 계산 결과를 보여주는 Fragment view 띄우기 -->
                    <Button
                        id="btn_res"
                        text="계산"
                        press=".onOpenResultDialog"/>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
