<mvc:View controllerName="sync.d14.project1402.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <l:VerticalLayout
                id="idVerti"
                width="300px">
                <Input id="idInput" />
                <Button 
                    id="idButton"
                    text="작성 완료"
                    press=".onClick" />
                <Text id="idText" text=""/>
                <Select
                    id="idSelect"
                    width="auto"
                    items="{list}">
                    <core:ListItem
                        id="idListItem"
                        key="{gender}"
                        text="{text}"
                        additionalText="{gender}"
                    />
                </Select>
                <Button
                    id="idButton2"
                    text="리스트 정보"
                    press=".onClick2"
                />
                <Text id="idText2" />
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
